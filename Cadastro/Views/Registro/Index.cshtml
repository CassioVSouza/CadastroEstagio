@model UsuarioModel

@{
    ViewData["Title"] = "Página de Registro";
}

@if(TempData["MensagemDeErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemDeErro"]
    </div>
}

<form onsubmit="return ValidarForm()" method="post" asp-controller="Registro" asp-action="Registrar">
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome Completo</label>
        <input type="text" class="form-control" id="Nome" asp-for="Nome">
    </div>
    <h1 id="teste"></h1>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="text" class="form-control" id="Email" asp-for="Email">
    </div>
    <div class="mb-3">
        <label for="Senha" class="form-label">Senha</label>
        <input type="password" class="form-control" id="Senha" asp-for="Senha">
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>